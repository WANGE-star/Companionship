
/* 基础样式 */
.home-page.data-v-1cf27b2a {
  background-color: #1e1e2e;
  min-height: 100vh;
  padding: 0 30rpx;
  box-sizing: border-box;
  color: #ffffff;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  padding-bottom: 120rpx;
}

/* 导航栏 */
.header.data-v-1cf27b2a {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 60rpx;
  margin-bottom: 30rpx;
}
.close.data-v-1cf27b2a {
  font-size: 50rpx;
  color: #ffffff;
  cursor: pointer;
}
.title.data-v-1cf27b2a {
  font-size: 36rpx;
  font-weight: 600;
}
.empty.data-v-1cf27b2a {
  width: 50rpx;
}

/* 搜索栏 */
.search-bar.data-v-1cf27b2a {
  display: flex;
  align-items: center;
  background-color: #333344;
  border-radius: 30rpx;
  padding: 15rpx 20rpx;
  margin-bottom: 30rpx;
}
.city-picker.data-v-1cf27b2a {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  padding-right: 20rpx;
  border-right: 1rpx solid #666666;
  cursor: pointer;
}
.arrow.data-v-1cf27b2a {
  margin-left: 8rpx;
  font-size: 22rpx;
  color: #aaaaaa;
}
.search-input.data-v-1cf27b2a {
  flex: 1;
  height: 50rpx;
  font-size: 28rpx;
  color: #ffffff;
  margin: 0 20rpx;
  background: transparent;
}
.search-btn.data-v-1cf27b2a {
  width: 110rpx;
  height: 50rpx;
  background-color: #9966ff;
  color: #ffffff;
  font-size: 26rpx;
  border-radius: 25rpx;
  border: none;
  line-height: 50rpx;
}
.search-btn.data-v-1cf27b2a::after {
  border: none;
}

/* 分类图标区 */
.category-list.data-v-1cf27b2a {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
}
.category-item.data-v-1cf27b2a {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 16.666%;
}
.category-icon.data-v-1cf27b2a {
  width: 70rpx;
  height: 70rpx;
  margin-bottom: 10rpx;
}
.category-name.data-v-1cf27b2a {
  font-size: 24rpx;
  color: #ffffff;
}

/* 筛选栏 */
.filter-bar.data-v-1cf27b2a {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.filter-title.data-v-1cf27b2a {
  font-size: 32rpx;
  font-weight: 600;
}
.filter-all.data-v-1cf27b2a {
  font-size: 26rpx;
  color: #aaaaaa;
  cursor: pointer;
}

/* 筛选选项 */
.filter-options.data-v-1cf27b2a {
  display: flex;
  gap: 15rpx;
  margin-bottom: 30rpx;
  flex-wrap: wrap;
}
.filter-option.data-v-1cf27b2a {
  background-color: #333344;
  border-radius: 20rpx;
  padding: 8rpx 20rpx;
  font-size: 26rpx;
  color: #ffffff;
  cursor: pointer;
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
}
.clear-filter.data-v-1cf27b2a {
  width: 24rpx;
  height: 24rpx;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  line-height: 1;
}

/* 达人列表 */
.talent-list.data-v-1cf27b2a {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  gap: 20rpx;
}
.talent-item.data-v-1cf27b2a {
  width: 48%;
  background-color: #333344;
  border-radius: 20rpx;
  overflow: hidden;
  position: relative;
}
.talent-avatar.data-v-1cf27b2a {
  width: 100%;
  height: 300rpx;
  object-fit: cover;
}

/* 距离标签 */
.distance-tag.data-v-1cf27b2a {
  position: absolute;
  top: 15rpx;
  left: 15rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #ffffff;
  font-size: 24rpx;
  padding: 5rpx 10rpx;
  border-radius: 15rpx;
  z-index: 10;
  display: flex;
  align-items: center;
  gap: 5rpx;
}
.location-icon.data-v-1cf27b2a {
  width: 20rpx;
  height: 20rpx;
}

/* 状态标签 */
.status-tag.data-v-1cf27b2a {
  position: absolute;
  bottom: 180rpx;
  right: 10rpx;
  padding: 5rpx 15rpx;
  border-radius: 15rpx;
  font-size: 24rpx;
  z-index: 10;
  display: flex;
  align-items: center;
  gap: 5rpx;
}
.status-tag.available.data-v-1cf27b2a {
  background-color: #00cc66;
  color: #ffffff;
}
.status-tag.accepting.data-v-1cf27b2a {
  background-color: #ff3366;
  color: #ffffff;
}
.status-icon.data-v-1cf27b2a {
  width: 20rpx;
  height: 20rpx;
}

/* 达人信息区 */
.talent-info.data-v-1cf27b2a {
  padding: 15rpx 20rpx;
  position: relative;
}

/* 姓名与性别年龄组合容器 */
.name-container.data-v-1cf27b2a {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}
.talent-name.data-v-1cf27b2a {
  font-size: 32rpx;
  font-weight: 600;
}

/* 性别+年龄组合样式 */
.gender-age-group.data-v-1cf27b2a {
  display: flex;
  align-items: center;
  gap: 8rpx;
}
.gender-icon.data-v-1cf27b2a {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: white;
}
.gender-icon.female.data-v-1cf27b2a {
  background-color: #ff66cc; /* 女性粉色 */
}
.gender-icon.male.data-v-1cf27b2a {
  background-color: #6699ff; /* 男性蓝色 */
}
.age-text.data-v-1cf27b2a {
  font-size: 26rpx;
  color: #ffffff;
  background-color: rgba(153, 102, 255, 0.2);
  padding: 2rpx 10rpx;
  border-radius: 12rpx;
}
.talent-basic.data-v-1cf27b2a {
  font-size: 24rpx;
  color: #aaaaaa;
  display: block;
  margin-bottom: 10rpx;
}
.talent-tags.data-v-1cf27b2a {
  font-size: 24rpx;
  color: #ffffff;
  display: block;
  line-height: 1.4;
}

/* 客服图标 */
.service-icon.data-v-1cf27b2a {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  width: 36rpx;
  height: 36rpx;
}

/* 底部导航 */
.tab-bar.data-v-1cf27b2a {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #2a2a3c;
  display: flex;
  justify-content: space-around;
  align-items: center;
  z-index: 999;
}
.tab-item.data-v-1cf27b2a {
  display: flex;
  flex-direction: column;
  align-items: center;
  cursor: pointer;
}
.tab-item.active .tab-text.data-v-1cf27b2a {
  color: #9966ff;
}
.tab-icon.data-v-1cf27b2a {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 5rpx;
}
.tab-text.data-v-1cf27b2a {
  font-size: 24rpx;
  color: #aaaaaa;
}

/* 无结果提示 */
.no-result.data-v-1cf27b2a {
  width: 100%;
  text-align: center;
  padding: 100rpx 0;
  color: #aaaaaa;
  font-size: 32rpx;
}

/* 搜索结果提示 */
.search-result-hint.data-v-1cf27b2a {
  color: #aaaaaa;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
}
